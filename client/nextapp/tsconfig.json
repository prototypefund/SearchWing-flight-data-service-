{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "isolatedModules": true,
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@schema/*": ["./types/models/*"],
      "@schema": ["./types/index"],
      "@lib/*": ["./lib/*"],
      "@constants": ["./lib/constants"],
      "@idbSchema": ["./dexie-database"],
      "@modules/*": ["./modules/*"],
      "@api/*": ["./api/*"],
      "@views/*": ["./views/*"],
      "~/*": ["./*"]
    }
  },

  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.ts", "**/*.ts", "dexie-database.ts"],
  "exclude": ["node_modules", "__generated__"]
}
