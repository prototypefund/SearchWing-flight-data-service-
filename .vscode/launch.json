{
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/server",
            "envFile": "${workspaceFolder}/server/.env",
            "program": "${workspaceFolder}/server/bin/api.py",
            "args": [
                "--log-level",
                "debug"
            ],
            "jinja": true,
            "justMyCode": true,
            "env": {"PYTHONPATH": "${workspaceFolder}${pathSeparator}server:${env:PYTHONPATH}${workspaceFolder}${pathSeparator}src"}
        }
    ]
}
